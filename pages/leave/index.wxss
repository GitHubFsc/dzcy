/* pages/leave/index.wxss */
.appeal{
  width:auto;
  height: auto;
  padding: 20rpx 30rpx;
}
.appeal .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.appeal .top view image{
  width: 39rpx;
  height: 25rpx;
}
.appeal .textarea{
  width: 100%;
  height: 250rpx;
  margin-top: 50rpx;
}
.appeal .textarea textarea{
  width: 100%;
  height: 100%;
}
.appeal .file{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.appeal .file image{
  width: 197rpx;
  height: 148rpx;
  margin: 6rpx;
}
.appeal .preview{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: rgb(1, 1, 1);
  opacity: 0.8;
}