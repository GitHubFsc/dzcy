/* pages/search/index.wxss */
.search {
  width: auto;
  height: auto;
  padding-top: 36rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}
.searchItem {
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
}

.searchItem image {
  height: 60rpx;
  width: 70rpx;
  margin-left: 30rpx;
}

.searchItem input {
  width: 545rpx;
  height: 60rpx;
  font-size: 30rpx;
  background-color: #f3f4f6;
  border-radius: 0 30rpx 30rpx 0;
}
.main_right{
  width: 80rpx;
  font-size: 28rpx;
  color: #2c2c2c;
  margin-right: 24rpx;
}


