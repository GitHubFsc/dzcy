/* pages/takeLeave/index.wxss */
.taskVoucher{
  width:auto;
  height: auto;
  /* padding: 20rpx 30rpx; */
}
.taskVoucher .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding:30rpx;
}
.taskVoucher .top view image{
  width: 39rpx;
  height: 25rpx;
}
.taskVoucher .position{
  width: 100%;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #d6d8dc;
}
.taskVoucher .position .position_top{
  font-size: 24rpx;
  padding:20rpx 30rpx;
}
.taskVoucher .position .position_bottom{
  padding: 0rpx 30rpx;
  font-size: 28rpx;
  color: #a9a9a9;
}
.taskVoucher .position .position_bottom image{
  width: 26rpx;
  height: 33rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.taskVoucher .file{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.taskVoucher .file .task_txt{
  width: 100%;
  font-size: 24rpx;
  padding: 30rpx 0rpx;
}
.taskVoucher .file image{
  width: 197rpx;
  height: 148rpx;
  margin: 6rpx;
}
