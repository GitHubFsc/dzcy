/**index.wxss**/
.container{
  width: auto;
  height: auto;
}
.container .nav_tab{
  display: flex;
  justify-content: space-around;
}
.nav_name {
  color: #222222;
  padding: 18rpx 18rpx 10rpx 18rpx;
  font-size: 30rpx;
}

.nav_hover {
  color: #0e0e0e;
  font-size: 32rpx;
  font-weight: 550;
}
.nav_border {
  width: 38rpx;
  height: 6rpx;
  margin-top: 4rpx;
  margin-left: 26rpx;
  background-color: #ef6c00;
}
.Task {
  background-color: #f3f4f6;
  padding-top: 1rpx;
}

.task {
  padding: 0 16rpx;
  background-color: #ffffff;
  height: 200rpx;
  margin: 5rpx auto;
  position: relative;
}

.task .task_img {
  position: absolute;
  margin: 0;
  width: 142rpx;
  height: 142rpx;
  top: 38rpx;
}

.task .task_content {
  position: absolute;
  margin: 0;
  top: 38rpx;
  left: 186rpx;
}

.task .task_title {
  font-size: 28rpx;
  font-weight: 550;
  margin-top: 0;
}

.task .task_title view {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  color: #ef6c00;
  border: 1rpx solid #ef6c00;
  text-align: center;
  line-height: 30rpx;
  border-radius: 4rpx;
}

.task .task_time {
  height: 56rpx;
  font-size: 22rpx;
  color: #505050;
  line-height: 60rpx;
}

.task .task_conditions {
  height: 38rpx;
}

.task .task_condition {
  height: 38rpx;
  background-color: #f5f5f5;
  font-size: 18rpx;
  position: 0;
  line-height: 38rpx;
  margin-right: 20rpx;
  padding: 10rpx;
}

.task .task_right {
  position: absolute;
  margin: 0;
  top: 60rpx;
  right: 18rpx;
  height: 77rpx;
}

.task .task_process {
  font-size: 20rpx;
  color: #6b6b6b;
  text-align: right;
  margin-bottom: 30rpx;
}

.task .task_right .task_price_txt {
  font-size: 20rpx;
  color: #e14a00;
}

.task .task_right .task_price {
  font-size: 32rpx;
  color: #e14a00;
}